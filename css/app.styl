html
  width: 100%
  height: 100%

body
  background-color: #FF3CAC
  background-image: linear-gradient(to bottom left, #FF3CAC 0%, #784BA0 50%, #2B86C5 100%)
  background-size: contain
  width: 100%
  height: 100%
  font-size: 14px

video
  max-width: 100%

.app
  margin-top: 40px
  &__title
    text-align: center
    color: #fff
    margin-bottom: 20px

.search
  width: 50%
  margin: 0 auto
  &__input
    background: #fff
    text-align: center
    background: rgba(0,0,0,.6)
    box-shadow: 0 0 5px rgba(0,0,0,.2)
    border: none
    color: #fff
    transition: all .3s ease-in-out
    &:focus
      box-shadow: none
      outline: none
      background: rgba(0,0,0,.7)
      box-shadow: 0 5px 20px rgba(0,0,0,.3)

.section
  margin: 20px 0

  &__title
    display: block
    margin: 20px 0
    text-align: left
    color: #fff

.card
  border: none
  &--video
    background-color: #FBAB7E;
    background-image: linear-gradient(62deg, #FBAB7E 0%, #F7CE68 100%);
    margin-bottom: 30px
    
    svg
      position: absolute
      left: 0
      right: 0
      margin: auto
      top: 50px
      cursor: pointer
    img
      width: 100%
  &--album
    background-color: #08AEEA
    background-image: linear-gradient(0deg, #08AEEA 0%, #2AF598 100%)
    background-size: cover
    margin-bottom: 30px

    &__overlay
      position: absolute
      top: 0
      opacity: .3
      width: 100%
      height: 100%
      background-color: #08AEEA
      background-color: #D9AFD9;
      background-image: linear-gradient(0deg, #D9AFD9 0%, #97D9E1 100%);


.artist
  border-radius: .25rem
  margin: 20px 0
  color: #fff
  text-align: center

.jumbotron
  background-size: cover
  h1
    text-shadow: 0 0 5px #333
